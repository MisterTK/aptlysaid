{
  "name": "review-management-template",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.19.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build:analyze": "npm run build && npx vite-bundle-analyzer",
    "build:clean": "rm -rf build .svelte-kit && npm run build",
    "ci": "npm run lint && npm run build",
    "prepare": "svelte-kit sync",
    "postinstall": "svelte-kit sync",
    "validate": "npm run format:check && npm run lint && npm run typecheck && npm run test:run",
    "precommit": "npm run validate"
  }
}
